{
	"name": "eth-address-observer",
	"version": "0.7.3",
	"description": "Ethereum addresses observer for poonkt.io",
	"keywords": [
		"eth",
		"ether",
		"ethereum",
		"web3",
		"wallet",
		"address",
		"transaction",
		"pending",
		"confirmed",
		"observer",
		"watch",
		"poonkt"
	],
	"homepage": "https://github.com/poonkt/eth-address-observer#readme",
	"bugs": {
		"url": "https://github.com/poonkt/eth-address-observer/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/poonkt/eth-address-observer.git"
	},
	"license": "LGPL-3.0-or-later",
	"author": "Vitaly Snitovets",
	"main": "dist/index.js",
	"typings": "typings/index.d.ts",
	"scripts": {
		"dev": "nodemon",
		"build": "npm run clean && tsc",
		"clean": "del-cli ./dist && del-cli ./typings",
		"lint": "npx eslint . --ext .ts,.tsx",
		"debug": "node --inspect=0.0.0.0:9229 -r ts-node/register node_modules/.bin/jest --runInBand --forceExit",
		"test": "sh ./run-tests-isolated.sh",
		"test:ci": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit -V",
		"test:debug": "docker-compose -f docker-compose.debug.yml up --build --abort-on-container-exit -V"
	},
	"dependencies": {
		"@types/bintrees": "^1.0.3",
		"tslib": "2.3.0",
		"web3": "^1.4.0"
	},
	"devDependencies": {
		"@openzeppelin/contracts": "^4.2.0",
		"@types/jest": "^26.0.23",
		"@typescript-eslint/eslint-plugin": "^4.28.2",
		"@typescript-eslint/parser": "^4.28.2",
		"del-cli": "^4.0.0",
		"dotenv": "^10.0.0",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jest": "^24.3.6",
		"ethereum-waffle": "^3.4.0",
		"jest": "^27.0.6",
		"nodemon": "^2.0.9",
		"ts-jest": "^27.0.3",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.5"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"./src/test/setup.ts"
		],
		"modulePathIgnorePatterns": [
			"<rootDir>/src/lib/__test__/utils"
		]
	}
}
